<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat"></style>

    <!--Activity article's themes-->
    <style name="ArticleTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="ArticleAppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!--Views styles-->
    <style name="CardViewStyle" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="TabLayout" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!--Text styles-->
    <style name="ItemHeader" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/fontDark</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Abstract" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/fontDark</item>
        <item name="android:textSize">@dimen/abstract_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Image">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_height</item>
    </style>

</resources>
